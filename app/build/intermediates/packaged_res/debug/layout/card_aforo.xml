<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/shape_border"
    android:padding="15dp"
    tools:context=".ui.activities.CrewActivity">

    <TextView
        android:id="@+id/tvRecipientCardName"
        style="@style/Theme.AseoAforos.tvLabelStyle.size18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="BOLSAS PLASTICAS - DOMESTICAS" />

    <EditText
        android:id="@+id/etRecipientCardQuantity"
        style="@style/Theme.AseoAforos.etProvision.toll"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        android:autofillHints="1"
        android:hint="@string/one"
        android:inputType="numberDecimal"
        android:labelFor="@id/tvRecipientCardName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/spinRecipientCardPercent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinRecipientCardPercent"
        style="@style/Theme.AseoAforos.spinAforo"
        android:layout_width="100dp"
        android:layout_marginEnd="12dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>