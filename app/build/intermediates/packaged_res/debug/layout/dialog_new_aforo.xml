<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <TextView
        android:id="@+id/tvDialogNewAforoTitle"
        style="@style/Theme.AseoAforos.tvTitleStyle"
        android:text="@string/selectTypeAforo"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDialogNewAforoVolume"
        style="@style/Theme.AseoAforos.btn.newAforo"
        android:layout_marginTop="60dp"
        android:text="@string/volumeAforo"
        app:layout_constraintBottom_toTopOf="@id/btnDialogNewAforoWeight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDialogNewAforoTitle" />

    <Button
        android:id="@+id/btnDialogNewAforoWeight"
        style="@style/Theme.AseoAforos.btn.newAforo"
        android:text="@string/weightAforo"
        app:layout_constraintBottom_toTopOf="@id/btnDialogNewAforoEspecial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnDialogNewAforoVolume" />

    <Button
        android:id="@+id/btnDialogNewAforoEspecial"
        style="@style/Theme.AseoAforos.btn.newAforo"
        android:text="@string/especialAforo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnDialogNewAforoWeight" />

</androidx.constraintlayout.widget.ConstraintLayout>