<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvDialogNewCrewTitle"
        style="@style/Theme.AseoAforos.tvTitleStyle"
        android:text="@string/crew"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinDialogNewCrewName"
        style="@style/Theme.AseoAforos.spinnerCrewStyle"
        app:layout_constraintBottom_toTopOf="@id/btnDialogNewCrewAccept"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDialogNewCrewTitle" />

    <Button
        android:id="@+id/btnDialogNewCrewAccept"
        style="@style/Theme.AseoAforos.btn"
        android:text="@string/accept"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinDialogNewCrewName" />

</androidx.constraintlayout.widget.ConstraintLayout>