<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/shape_border"
    android:padding="15dp"
    tools:context=".ui.activities.CrewActivity">

    <TextView
        android:id="@+id/tvClientCardType"
        style="@style/Theme.AseoAforos.tvLabelStyle.size18"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toTopOf="@id/tvClientCardAddress"
        app:layout_constraintEnd_toStartOf="@id/tvClientCardName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="VOLUMEN" />

    <TextView
        android:id="@+id/tvClientCardName"
        style="@style/Theme.AseoAforos.tvLabelStyle.size18"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/tvClientCardAddress"
        app:layout_constraintEnd_toStartOf="@id/imgVClientCardCheck"
        app:layout_constraintStart_toEndOf="@id/tvClientCardType"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="METALURGIA INDUSTRIAL S.A." />

    <TextView
        android:id="@+id/tvClientCardAddress"
        style="@style/Theme.AseoAforos.tvLabelStyle.size18"
        android:layout_width="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imgVClientCardCheck"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="AUT. MEDELLÍN KM 1.5, BODEGA 6, PARQUE EMPRESARIAL SAN FERNANDO" />

    <ImageView
        android:id="@+id/imgVClientCardCheck"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/shape_border"
        android:contentDescription="@string/checkImgDescription"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>